#!/bin/bash -e

#JAR="TicTacToe.jar"
APP="TicTacToe"

# Always deploy new version, clean before
/Users/Alexander/Developer/TicTacToe/bin/clean
/Users/Alexander/Developer/TicTacToe/bin/package

# If the installation folder exists under /tmp, remove it
test -f /Users/Alexander/Developer/TicTacToe/tmp/${APP} && rm -r /Users/Alexander/Developer/TicTacToe/tmp/${APP}
cp -r /Users/Alexander/Developer/TicTacToe/build/install/${APP} /Users/Alexander/Developer/TicTacToe/tmp

# Run application once
#java -jar ~/TicTacToe/tmp/${JAR}
/Users/Alexander/Developer/TicTacToe/tmp/bin/${APP}
